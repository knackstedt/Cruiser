{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "https://localhost:4500/"
    },
    {
      "name": "Server",
      "type": "node",
      "request": "launch",
      "args": [
        "server/main.ts",
        "--project"
      ],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        // "--loader=ts-node/esm",
        // "--experimental-specifier-resolution=node",
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
    },
    {
      "name": "Database",
      "preLaunchTask": "surrealdb",
      "type": "chrome",
      "request": "attach"
    }
  ]
}
