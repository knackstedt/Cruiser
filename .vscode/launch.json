{
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "args": [
                "src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/server",
            "env": {
                "CRUISER_GLOBAL_STORAGE_PATH": "/home/knackstedt/source/@me/dot-ops/data",
                "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4318/"
            },
        },
        {
            "name": "Agent",
            "type": "node",
            "request": "launch",
            "args": [
                "command-parser.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/agent/src/util"
        }
    ]
}
